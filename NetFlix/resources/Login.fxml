<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane opacity="0.95" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="netflix.controllers.LoginController">

      <Label fx:id="lblTitle" layoutX="138.0" layoutY="39.0" text="NetFlix Statistix login" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="35.0" />
         </font>
      </Label>

      <TextField fx:id="tbUn" layoutX="138.0" layoutY="136.0" prefHeight="40.0" prefWidth="324.0" promptText="Username" style="-fx-background-color: #777; -fx-text-fill: #FFF;">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>

      <PasswordField fx:id="tbPw" layoutX="138.0" layoutY="200.0" prefHeight="40.0" prefWidth="324.0" promptText="Password" style="-fx-background-color: #777; -fx-text-fill: #FFF;">
         <font>
            <Font size="16.0" />
         </font>
      </PasswordField>

      <!-- Je kunt bij de button ook onClick="#btnLogin_click" gebruiken -->
      <Button fx:id="btnLogin" defaultButton="true" layoutX="232.0" layoutY="285.0" mnemonicParsing="false" onAction="#btnLogin_click" prefHeight="40.0" prefWidth="135.0" style="-fx-background-color: #444;" text="Login" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <effect>
            <Glow />
         </effect>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      </Button>
</AnchorPane>
